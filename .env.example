# 掌上刷题宝 - 环境变量配置模板
# 复制此文件为 .env 并根据实际情况修改

# =============================================================================
# 服务器配置
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# 数据库配置
# =============================================================================
# 使用 SQLite (开发环境推荐)
USE_SQLITE=true

# MySQL 配置 (生产环境)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=zhangshang_shuati

# =============================================================================
# JWT 认证配置
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d

# =============================================================================
# CORS 配置
# =============================================================================
CORS_ORIGINS=http://localhost:8080,http://localhost:8081,http://localhost:8083

# =============================================================================
# 微信小程序配置
# =============================================================================
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# 文件上传配置
# =============================================================================
UPLOAD_MAX_SIZE=10mb
UPLOAD_DIR=public/uploads

# =============================================================================
# 开发环境特定配置
# =============================================================================
# 是否启用调试模式
DEBUG=true

# API 基础路径
API_PREFIX=/api
API_VERSION=v1
