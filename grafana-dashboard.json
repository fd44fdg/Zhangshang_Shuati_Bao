{
  "dashboard": {
    "id": null,
    "title": "掌上刷题系统 - 生产环境监控",
    "tags": ["shuati", "production", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统概览",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up == 1)",
            "legendFormat": "在线服务数"
          },
          {
            "expr": "count(up == 0)",
            "legendFormat": "离线服务数"
          },
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "总请求率 (req/s)"
          },
          {
            "expr": "avg(100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100))",
            "legendFormat": "平均 CPU 使用率 (%)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP 请求统计",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "yAxes": [
          {
            "label": "请求/秒",
            "min": 0
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 3,
        "title": "响应时间分布",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.90, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "90th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "秒",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "CPU 使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 5,
        "title": "内存使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 85,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 6,
        "title": "磁盘使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"} / node_filesystem_size_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "{{instance}} - {{mountpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "百分比",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 90,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 7,
        "title": "MySQL 连接数",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "legendFormat": "当前连接数"
          },
          {
            "expr": "mysql_global_variables_max_connections",
            "legendFormat": "最大连接数"
          }
        ],
        "yAxes": [
          {
            "label": "连接数",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "MySQL 查询性能",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(mysql_global_status_queries[5m])",
            "legendFormat": "查询/秒"
          },
          {
            "expr": "rate(mysql_global_status_slow_queries[5m])",
            "legendFormat": "慢查询/秒"
          }
        ],
        "yAxes": [
          {
            "label": "查询/秒",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Redis 内存使用",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "已使用内存"
          },
          {
            "expr": "redis_memory_max_bytes",
            "legendFormat": "最大内存"
          }
        ],
        "yAxes": [
          {
            "label": "字节",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Redis 连接和操作",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "连接数"
          },
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "命令/秒"
          }
        ],
        "yAxes": [
          {
            "label": "数量",
            "min": 0
          }
        ]
      },
      {
        "id": 11,
        "title": "容器资源使用",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".+\"}[5m]) * 100",
            "legendFormat": "{{name}} - CPU %"
          },
          {
            "expr": "container_memory_usage_bytes{name=~\".+\"} / 1024 / 1024",
            "legendFormat": "{{name}} - Memory MB"
          }
        ],
        "yAxes": [
          {
            "label": "使用量",
            "min": 0
          }
        ]
      },
      {
        "id": 12,
        "title": "业务指标",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "rate(user_registrations_total[1h])",
            "legendFormat": "用户注册/小时"
          },
          {
            "expr": "rate(questions_answered_total[1h])",
            "legendFormat": "答题数/小时"
          },
          {
            "expr": "rate(login_attempts_total{status=\"success\"}[1h])",
            "legendFormat": "成功登录/小时"
          },
          {
            "expr": "rate(login_attempts_total{status=\"failed\"}[1h])",
            "legendFormat": "失败登录/小时"
          }
        ],
        "yAxes": [
          {
            "label": "数量/小时",
            "min": 0
          }
        ]
      },
      {
        "id": 13,
        "title": "网络流量",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 52},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{instance=~\"$instance\", device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{instance}} - {{device}} 入站"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{instance=~\"$instance\", device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{instance}} - {{device}} 出站"
          }
        ],
        "yAxes": [
          {
            "label": "比特/秒",
            "min": 0
          }
        ]
      },
      {
        "id": 14,
        "title": "磁盘 I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 52},
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "{{instance}} - {{device}} 读取"
          },
          {
            "expr": "rate(node_disk_written_bytes_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "{{instance}} - {{device}} 写入"
          }
        ],
        "yAxes": [
          {
            "label": "字节/秒",
            "min": 0
          }
        ]
      },
      {
        "id": 15,
        "title": "告警状态",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 60},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {},
              "renameByName": {
                "alertname": "告警名称",
                "severity": "严重程度",
                "instance": "实例",
                "job": "服务",
                "description": "描述"
              }
            }
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "部署事件",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "increase(deployment_events_total[1m])",
          "iconColor": "green",
          "titleFormat": "部署",
          "textFormat": "应用部署事件"
        }
      ]
    },
    "links": [
      {
        "title": "Prometheus",
        "url": "/prometheus",
        "type": "link"
      },
      {
        "title": "应用日志",
        "url": "/logs",
        "type": "link"
      }
    ]
  }
}