{
  "name": "zhangshang-shuati",
  "version": "1.0.0",
  "description": "掌上刷题系统 - 一个完整的在线刷题平台",
  "main": "index.js",
  "scripts": {
  "preflight": "node scripts/preflight-check.js",
  "prebuild": "npm run preflight",
    "test": "node run-all-tests.js",
    "test:unit": "node run-all-tests.js --unit",
    "test:integration": "node run-all-tests.js --integration",
    "test:e2e": "node run-all-tests.js --e2e",
    "test:coverage": "node run-all-tests.js --coverage",
    "test:backend": "cd backend && npm test",
    "test:admin": "cd admin-panel && npm run test:unit",
    "test:mobile": "cd zhangshang-shuati-app && npm run test:unit",
    "install:all": "npm install && cd backend && npm install && cd ../admin-panel && npm install && cd ../zhangshang-shuati-app && npm install",
    "start": "node scripts/quick-start.js",
    "start:backend": "cd backend && npm start",
    "start:admin": "cd admin-panel && npm run serve",
    "start:mobile": "cd zhangshang-shuati-app && npm run dev:h5",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:admin\" \"npm run start:mobile\"",
    "dev:backend": "cross-env NODE_ENV=development npm run start:backend",
    "dev:admin": "cross-env NODE_ENV=development npm run start:admin",
    "dev:mobile": "cross-env NODE_ENV=development npm run start:mobile",
    "build": "npm run build:backend && npm run build:admin && npm run build:mobile",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-panel && npm run build",
    "build:mobile": "cd zhangshang-shuati-app && npm run build:h5",
    "build:miniprogram": "cd zhangshang-shuati-app && npm run build:mp-weixin",
    "health": "node scripts/project-health-check.js",
    "bug-hunt": "node scripts/bug-hunter.js",
    "setup": "cp .env.example .env && npm run install:all && cd backend && npm run db:init:seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "education",
    "quiz",
    "learning",
    "mobile",
    "web"
  ],
  "author": "开发团队",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "sass": "^1.89.2"
  },
  "dependencies": {
    "@dcloudio/uni-ui": "^1.5.10",
    "axios": "^1.6.0",
    "mysql2": "^3.6.0"
  }
}
