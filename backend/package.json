{
  "name": "zhangshang-shuati-backend",
  "version": "1.0.0",
  "description": "掌上刷题宝后端服务器",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "start:dev": "cross-env NODE_ENV=development node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:debug": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "build": "echo 'No build step required for Node.js'",
    "prestart": "npm run validate:env && npm run db:migrate",
    "postinstall": "npm run validate:env",
    "test": "cross-env NODE_ENV=test jest",
    "test:api": "cross-env NODE_ENV=test jest -c jest.api.config.js",
    "test:e2e:auth": "cross-env NODE_ENV=test USE_REAL_DB_FOR_TEST=true jest tests/auth.e2e.test.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:system": "node scripts/run-system-test.js full",
    "test:system:quick": "node scripts/run-system-test.js quick",
    "test:system:performance": "node scripts/run-system-test.js performance",
    "test:system:data": "node scripts/run-system-test.js data-integrity",
    "test:system:api": "node scripts/run-system-test.js api",
    "test:system:interactive": "node scripts/run-system-test.js interactive",
    "test:e2e": "node scripts/e2e-basic-test.js",
    "test:e2e:dev": "node scripts/e2e-basic-test.js http://localhost:3000",
    "test:e2e:prod": "node scripts/e2e-basic-test.js https://api.example.com",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "logs:view": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "system:monitor": "node scripts/monitoring-cli.js",
    "system:validate": "node scripts/run-data-quality-validation.js",
    "system:cleanup": "node scripts/run-system-test.js cleanup",
    "system:report": "node scripts/run-system-test.js report",
    "validate:env": "node scripts/validate-env.js",
    "db:init": "node scripts/init-database.js",
    "db:init:seed": "node scripts/init-database.js --seed",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "docker:build": "docker build -t shuati-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env shuati-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
