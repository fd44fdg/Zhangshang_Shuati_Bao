# 掌上刷题系统 - 生产环境配置

# 应用配置
NODE_ENV=production
VUE_APP_ENV=production
VUE_APP_BASE_API=/api/v1
VUE_APP_TITLE=掌上刷题系统

# 服务器配置
PORT=3000
HOST=0.0.0.0

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=shuati_prod
DB_USER=shuati_user
DB_PASSWORD=StrongPassword123!
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RedisStrongPassword123!
REDIS_DB=0

# JWT配置
JWT_SECRET=YourSuperSecretKeyForJWTTokens123!@#
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 文件上传配置
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/app/logs

# 缓存配置
CACHE_TTL=3600 # 1小时

# 安全配置
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
CSRF_PROTECTION=true

# 邮件配置
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@your-domain.com
MAIL_PASSWORD=YourMailPassword123!
MAIL_FROM=掌上刷题系统 <noreply@your-domain.com>

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 第三方服务配置
# 阿里云OSS (如果使用)
ALIYUN_OSS_ACCESS_KEY_ID=your_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_OSS_BUCKET=your-bucket-name
ALIYUN_OSS_REGION=oss-cn-beijing
ALIYUN_OSS_ENDPOINT=https://oss-cn-beijing.aliyuncs.com

# 短信服务 (如果使用)
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=掌上刷题
SMS_TEMPLATE_CODE=SMS_123456789

# 微信小程序配置 (如果使用)
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# 其他自定义配置
APP_VERSION=1.0.0
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=系统正在维护中，请稍后再试。